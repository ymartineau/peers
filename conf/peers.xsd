<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           targetNamespace="http://peers.sourceforge.net"
           xmlns="http://peers.sourceforge.net"
           elementFormDefault="qualified">



  <!-- Simple Types -->


  <xs:simpleType name="portType">
    <xs:restriction base="xs:integer">
      <xs:minInclusive value="0"/>
      <xs:maxInclusive value="65535"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="mediaModeType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="none"/>
      <xs:enumeration value="captureAndPlayback"/>
      <xs:enumeration value="echo"/>
      <xs:enumeration value="file"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:simpleType name="mediaFileDataFormatType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="pcm_8khz_16_bits_mono"/>
      <xs:enumeration value="a_law"/>
    </xs:restriction>
  </xs:simpleType>

  <!-- Complex Types -->

  <xs:complexType name="supportedCodecsType">
    <xs:sequence>
      <xs:element name="codec">
        <xs:complexType>
          <xs:attribute name="name" type="xs:string"/>
          <xs:attribute name="payloadType" type="xs:integer"/>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="peersType">
    <xs:sequence>
      <xs:element name="ipAddress" type="xs:string"/>
      <xs:element name="userPart" type="xs:string"/>
      <xs:element name="domain" type="xs:string"/>
      <xs:element name="password" type="xs:string"/>
      <xs:element name="outboundProxy" type="xs:string"/>
      <xs:element name="sipPort" type="portType"/>
      <xs:element name="rtpPort" type="portType"/>
      <xs:element name="authorizationUsername" type="xs:string"/>
      <xs:element name="mediaMode" type="mediaModeType"/>
      <xs:element name="mediaDebug" type="xs:boolean"/>
      <xs:element name="mediaFileDataFormat" type="mediaFileDataFormatType"/>
      <xs:element name="mediaFile" type="xs:string"/>
      <xs:element name="supportedCodecs" type="supportedCodecsType"/>
    </xs:sequence>
  </xs:complexType>

  <!-- Root Element -->

  <xs:element name="peers" type="peersType"/>

</xs:schema>
